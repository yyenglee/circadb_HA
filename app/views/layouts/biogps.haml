!!! XML
!!!
%html
  %head
    %meta{:name => "author" , :content=> "Angel Pizarro"}
    %meta{:name => "description" , :content => "CIRCA: Circadian gene expression profiles."}
    %meta{:name => "keywords", :content => "circadian gene experession, transcript profiles, circadian, gene expression, microarray, transcription, Cosopt, mus musculus, mouse, mouse gene expression"}
    = javascript_include_tag :defaults
    = stylesheet_link_tag "screen"
    /[if IE]
      = stylesheet_link_tag "ie"
    = stylesheet_link_tag "jquery-ui-1.7.1.custom.css"
    = stylesheet_link_tag "biogps"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"
  %body.container.span-8.last
    .header.span-10.last
      %table{:style => "border: 1px solid #FFF; margin: 2px;"}
        %tr
          %td.span-6= image_tag("circa_small.png")
          %td.span-4= link_to @unigene_id, request.url(), :style => "text-decoration:none;text-align:center"
    .results.span-10.last
      = yield
    .footer.span-10.last
      = link_to "CIRCA: Main Site", root_path
      |
      = link_to "John Hogenesch Lab", "http://bioinf.itmat.upenn.edu/hogeneschlab"
      |
      =link_to "ITMAT Bioinformatics Facility", "http://bioinf.itmat.upenn.edu/"
